cabal-version: 2.2

name:           red-panda
version:        0.1.0.0
synopsis:       A Haskell project
description:    See https://hackage.haskell.org/package/red-panda/docs/RedPanda.html
author:         Panda
maintainer:     Panda
copyright:      2023 Panda
license:        BSD-2-Clause-Patent
license-file:   LICENSE
build-type:     Simple

library
  exposed-modules:
      RedPanda
  other-modules:
      Paths_red_panda
  autogen-modules:
      Paths_red_panda
  hs-source-dirs:
      lib
  ghc-options: -Wall
  build-depends:
      base ==4.*
    , containers
  default-language: Haskell2010

executable red-panda
  main-is: Main.hs
  other-modules:
      Paths_red_panda
  autogen-modules:
      Paths_red_panda
  hs-source-dirs:
      app
  ghc-options: -threaded -rtsopts -with-rtsopts=-N -Wall
  build-depends:
      base ==4.*
    , red-panda
  default-language: Haskell2010

test-suite red-panda-test
  type: exitcode-stdio-1.0
  main-is: Main.hs
  other-modules:
      RedPanda.Test.NameTest
      Paths_red_panda
  autogen-modules:
      Paths_red_panda
  hs-source-dirs:
      test
  ghc-options: -threaded -rtsopts -with-rtsopts=-N -Wall
  build-depends:
      base ==4.*
    , hedgehog >=1.1 && <1.3
    , red-panda
    , tasty ==1.4.*
    , tasty-hedgehog >=1.3 && <1.5
  default-language: Haskell2010
